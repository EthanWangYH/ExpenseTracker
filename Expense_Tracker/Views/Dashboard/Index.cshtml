@{
    ViewData["IsDashboard"] = true;
}
<div class="row mb-4">
    <div class="col-md-4">
        <div class="d-flex flex-row align-items-center widget summary income">
            <div class="p-5">
                <i class="fa-solid fa-dollar-sign fa-2xl"></i>
            </div>
            <div class="m-auto py-3">
                <span class="lead">Total Income</span>
                <h1 class="display-6 fw-bold">@ViewBag.TotalIncome</h1>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="d-flex flex-row align-items-center widget summary expense">
            <div class="p-5">
                <i class="fa-solid fa-dollar-sign fa-2xl"></i>
            </div>
            <div class="m-auto py-3">
                <span class="lead">Total Expense</span>
                <h1 class="display-6 fw-bold">@ViewBag.TotalExpense</h1>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="d-flex flex-row align-items-center widget summary balance">
            <div class="p-5">
                <i class="fa-solid fa-dollar-sign fa-2xl"></i>
            </div>
            <div class="m-auto py-3">
                <span class="lead">Balance</span>
                <h1 class="display-6 fw-bold">@ViewBag.Balance</h1>
            </div>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-4">
        <div class="widget chart">
            <div class="p-4 ">
                <h5 class="fw-bold">Expense By Category</h5>
            </div>
            <ejs-accumulationchart id="donutchart" enableSmartLabels background="#1a222b">
                <e-accumulationchart-legendsettings position="Top" visible="true">
                    <e-legendsettings-textstyle color="#fff" size="1rem"></e-legendsettings-textstyle>
                </e-accumulationchart-legendsettings>
                <e-accumulationchart-tooltipsettings enable></e-accumulationchart-tooltipsettings>
                <e-accumulation-series-collection>
                    <e-accumulation-series dataSource="@ViewBag.SelectedExpense" xName="categoryTitleWithIcon" yName="amount" innerRadius="40%">
                        <e-accumulationseries-datalabel name="formattedAmount" visible="true">
                        </e-accumulationseries-datalabel>
                    </e-accumulation-series>
                </e-accumulation-series-collection>
            </ejs-accumulationchart>
        </div>
    </div>

    <div class="col-md-8">
        <div class="widget chart">
            <div class="p-4 ">
                <h5 class="fw-bold">Expense Vs Income</h5>
            </div>
            <ejs-chart id="spline-chart"  background="#1a222b" palettes="@(new string[]{"#54ff9a","#ffe91a"})">
                <e-chart-chartarea>
                    <e-chartarea-border width="0"></e-chartarea-border>
                </e-chart-chartarea>
                <e-chart-primaryxaxis valueType="Category">
                    <e-majorticklines width="0"></e-majorticklines>
                    <e-majorgridlines width="0" ></e-majorgridlines>
                </e-chart-primaryxaxis>
                <e-chart-primaryyaxis>
                    <e-majorticklines width="0"></e-majorticklines>
                    <e-majorgridlines width="1" color="#32414d" dashArray="1,2"></e-majorgridlines>
                </e-chart-primaryyaxis>
                <e-series-collection>
                    <e-series dataSource="@ViewBag.SplineChartData" xName="day" yName="income" name="Income" width="3"
                              type="@Syncfusion.EJ2.Charts.ChartSeriesType.Spline"></e-series>
                    <e-series dataSource="@ViewBag.SplineChartData" xName="day" yName="expense" name="Expense" width="3"
                              type="@Syncfusion.EJ2.Charts.ChartSeriesType.Spline"></e-series>
                </e-series-collection>
                <e-chart-legendsettings position="Top">
                    <e-legendsettings-textstyle color="#fff" size="1rem"></e-legendsettings-textstyle>
                </e-chart-legendsettings>
                <e-chart-tooltipsettings enable shared></e-chart-tooltipsettings>
            </ejs-chart>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-md-6">
        <div class="widget chart">
            <div class="p-4 ">
                <h5 class="fw-bold">Recent Transactions</h5>
            </div>
            <ejs-grid id="recent-transactions" gridLines="None" allowSorting="true" dataSource="@ViewBag.RecentTransactions">
                       <e-grid-columns>
                    <e-grid-column field="TransactionTitleWithIcon" headerText="Category" textAlign="Left" width="Auto"></e-grid-column>
                    <e-grid-column field="Date" headerText="Date" textAlign="Center" format="MMM-dd-yy" width="Auto"></e-grid-column>
                    <e-grid-column field="FormattedAmount" headerText="Amount" width="150px" textAlign="Center"></e-grid-column>
                </e-grid-columns>
            </ejs-grid>
        </div>
    </div>
    <div class="col-md-6 ">
        <div class="widget h-100">
            <div class="d-flex justify-content-center align-items-center h-100">
                <span class="fs-6"><i class="fa-solid fa-plus fa-2xl"></i>Widget</span>
            </div>
        </div>
    </div>
</div>