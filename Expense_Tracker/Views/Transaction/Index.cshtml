@model IEnumerable<Expense_Tracker.Models.Transaction>

@{
    ViewData["PageTitle"] = "Transaction";
    ViewData["PageActionText"] = "Create a Transaction";
    ViewData["PageActionUrL"] = "/Transaction/AddOrEdit";
}


<div class="row">
    <div class="col-md-7">
        <ejs-grid id="transactions" gridLines="None" allowSorting="true" allowPaging="true" dataSource="@Model">
            <e-grid-pagesettings pageSize="5"></e-grid-pagesettings>
            <e-grid-columns>
                <e-grid-column field="TransactionTitleWithIcon" headerText="Category" textAlign="Left" width="Auto"></e-grid-column>
                <e-grid-column field="Date" headerText="Date" textAlign="Center" format="MMM-dd-yy" width="Auto"></e-grid-column>
                <e-grid-column field="FormattedAmount" headerText="Amount" width="150px" textAlign="Center"></e-grid-column>
                <e-grid-column headerText="Action" template="#actionTemplate" width="100px" textAlign="Center"></e-grid-column>
            </e-grid-columns>
        </ejs-grid>
    </div>
    <div class="col-md-5">
        <div class="widget h-100 d-flex justify-content-center align-items-center">
            <i class="fa-solid fa-shapes fa-xl largeshape"></i>
        </div>
    </div>
</div>
<script id="actionTemplate" type="text/x-template">
    <div class="d-flex flex-row justify-content-center">
        <a class="btn btn-sm" href="/Transaction/AddOrEdit/${TransactionId}">
          <i class="fa-solid fa-pen-nib fa-lg no-a-decoration text-success" ></i>
        </a>
        <form action="/Transaction/Delete/${TransactionId}" method="post">
    @Html.AntiForgeryToken()
           <button type="submit" class="btn btn-sm btn-link no-a-decoration"
           onclick="return confirm(&quot;Are sure to delete this record?&quot;)">
              <i class="fa-solid fa-trash-can text-danger"></i>
           </button>
        </form>
    </div>
</script>
